{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["uid", "displayName", "email", "createdAt"]
    },
    "CommunityMessage": {
      "title": "Community Message",
      "description": "Represents a single message in the community chat.",
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "The content of the message."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the message was sent."
        },
        "user": {
          "type": "object",
          "properties": {
            "uid": { "type": "string" },
            "displayName": { "type": "string" },
            "photoURL": { "type": "string" },
            "level": { "type": "string", "enum": ["Pro", "Intermediate", "Rookie"] }
          },
          "required": ["uid", "displayName"]
        }
      },
      "required": ["text", "createdAt", "user"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/community-chat/{messageId}": {
      "schema": {
        "$ref": "#/entities/CommunityMessage"
      },
      "description": "Stores messages for the global community chat."
    }
  }
}
